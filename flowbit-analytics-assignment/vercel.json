{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": {
        "includeFiles": ["data/**"]
      }
    },
    {
      "src": "apps/api/package.json", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["data/**", "scripts/**", "prisma/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "functions": {
    "apps/api/dist/server.js": {
      "maxDuration": 60
    }
  }
}
